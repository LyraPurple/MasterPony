{% extends 'base.html.twig' %}

{% block title %}Liste des produits - {{ parent() }}{% endblock %}

{% block body %}
    <h1 class="my-4">
        Nos produits
        <a class="btn btn-info" href="{{ path('product_create') }}">Cr√©er un produit</a>
    </h1>

    <div class="row">
        {% for product in products %}
            <div class="col-lg-3">
                <div class="card">
                    <div class="card-body">
                        <h3 class="card-title">{{ product.name }}</h3>
                        <h5>{{ product.price / 100 }} &euro;</h5>
                    </div>
                    <div class="card-footer">
                        <a href="{{ path('product_show', {'id': product.id}) }}" class="btn btn-primary btn-block">Voir le produit</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
